<% if session[:admin] %>
<div class="admin">
<h1>New Announcement</h1>
<%= form_for(@announcement) do |f| %>
    <%=f.text_field :title, label: false, placeholder:"Enter Announcement Title"%>
    <%=f.text_field :picture, label: false, placeholder:"Enter Link To Announcement Picture"%>
    <%=f.text_area :body, cols: 40, rows: 15, label: false, placeholder:"Enter Announcement Details"%>
    <%= f.submit 'Add Announcement', :class => 'tiny button round' %>
<% end %>
<%= link_to 'Back to Home', root_path, class: "jet" %>
</div>
<%end%>
